datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum VolunteerRole {
  REFEREE
  PHOTOGRAPHER
  LOGISTICS
  FIRST_AID
  TECH_SUPPORT
}

enum EventCategory {
  BEHIND_SCENES
  TOURNAMENTS
  LEAGUES
}

model Admin {
  id        String   @id @default(cuid())
  username  String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Volunteer {
  id        String        @id @default(cuid())
  fullname  String
  email     String        @unique
  role      VolunteerRole
  reason    String?
  createdAt DateTime      @default(now())
}

model Partner {
  id        String   @id @default(cuid())
  fullname  String
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Event {
  id        String        @id @default(cuid())
  event     String
  location  String
  date      DateTime
  category  EventCategory
  img       String
  public_id String
  title     String
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}
